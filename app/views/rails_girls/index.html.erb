<p id="notice"><%= notice %></p>

<h1>Rails Girls</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rails_girls.each do |rails_girl| %>
      <tr>
        <td><%= rails_girl.name %></td>
        <td><%= rails_girl.message %></td>
        <td><%= link_to 'Show', rails_girl %></td>
        <td><%= link_to 'Edit', edit_rails_girl_path(rails_girl) %></td>
        <td><%= link_to 'Destroy', rails_girl, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rails Girl', new_rails_girl_path %>
